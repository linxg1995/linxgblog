ul, h1, h3
    padding: 0
    margin: 0

.header-nav
    position: sticky
    top: 0
    padding: 15px 0
    background-color: #000
    z-index: 1

    .normal-container
        display: -webkit-flex
        display: flex
        justify-content: space-between
        align-items: center

        .nav-menu
            li
                margin-right: 10px
        
        .nav-link
            li
                margin-left: 10px
                
        li
            display: inline-block
            &:hover a
                color: #3699ff
        a
            color: #fff
            text-decoration: none

.header-banner
    position relative
    height: 40vh
    margin: 10px auto
    background-position: center
    background-size: 1024px
    background-repeat: no-repeat
    background-image: url("/images/banner.jpg")
    border-radius: 4px

    .banner-mask
        position: absolute
        top: 0
        left 0
        width: 100%
        height 100%
        background-color: #666
        border-radius: 4px
        opacity: 0.5
    
    .banner-content
        position relative
        padding-top: 10vh
        color: #fff
        text-align: center

        h1
            display: inline-block
            line-height: 60px
            padding: 0 5px
            border-top: 2px solid
            border-bottom: 2px solid