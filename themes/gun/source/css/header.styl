.header-nav
    position: sticky
    top: 0
    padding: 15px 0
    background-color: #000

    .normal-container
        display: -webkit-flex
        display: flex
        justify-content: space-between
        align-items: center

    ul, h3
        margin: 0
    ul
        padding: 0
        li
            display: inline-block
            margin: 0 15px
            &:hover a
                color: #3699ff
        a
            color: #fff
            text-decoration: none;

.header-banner
    height: 50vh
    background: url("/images/banner.jpg") center no-repeat
    background-size: 100% 100%